<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FXMLController">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="Datei">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#beendenKlick" text="Beenden" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <ToolBar prefHeight="40.0" prefWidth="200.0">
        <items>
          <Button mnemonicParsing="false" onAction="#linieKlick">
               <graphic>
                  <ImageView pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/line24.gif" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button mnemonicParsing="false" onAction="#kreisKlick">
               <graphic>
                  <ImageView pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/circle24.gif" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button mnemonicParsing="false" onAction="#rechteckKlick">
               <graphic>
                  <ImageView pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/rect24.gif" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <ColorPicker fx:id="farbauswahl" onAction="#farbAuswahlZeigen" />
        </items>
      </ToolBar>
      <AnchorPane prefHeight="600.0" prefWidth="800.0">
         <children>
            <Canvas fx:id="zeichenflaeche" height="600.0" onMousePressed="#mausGedrueckt" onMouseReleased="#mausLos" width="800.0" />
         </children>
      </AnchorPane>
   </children>
